# Production Environment Variables
# Copy this file to .env and update the values for your production deployment

# IMPORTANT: Change this to a secure random string for production!
JWT_SECRET=your-super-secure-production-jwt-secret-64-characters-long-random-string

# Port (most cloud providers set this automatically)
PORT=3001

# Database path
DB_PATH=./database.sqlite

# Environment
NODE_ENV=production

# CORS Origins - Your frontend domain
PROD_CORS_ORIGIN=https://santosh-catering.vercel.app

# Example for multiple domains (if you have www subdomain):
# PROD_CORS_ORIGIN=https://santosh-catering.vercel.app,https://www.santosh-catering.vercel.app
